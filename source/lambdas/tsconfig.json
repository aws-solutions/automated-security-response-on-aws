{
  "extends": "../tsconfig.json", // Inherits from the base tsconfig.json
  "compilerOptions": {
    "experimentalDecorators": true,
    "outDir": null,
    "noUnusedLocals": false
  },
  "exclude": [
    "node_modules",
    "coverage/**/*",  // Exclude coverage directory to avoid file conflicts
    "dist/**/*",       // Exclude dist directory to avoid file conflicts
    "**/*.config.js",
    "**/__tests__/**"
  ]
}